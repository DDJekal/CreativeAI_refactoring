layout_style: {{ spec.params.layout_style }}. Container: {{ spec.params.container_shape }} mit {{ spec.params.corner_radius }} Ecken. border_style: {{ spec.params.border_style }} (dezent). texture_style: {{ spec.params.texture_style }} (matt, haptisch). background_treatment: {{ spec.params.background_treatment }}. accent_elements: {{ spec.params.accent_elements }} (sparsam).

